<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/new"><p>Add new message</p></a>
    <ul>
      <% messages.forEach(function(message) { %>
        <li>
          <strong><%= message.user %></strong>: <%= message.text %>
          <span><%= message.added.toDateString() %></span>
        </li>
      <% }); %>
    </ul>
  </body>
</html>
